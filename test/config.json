{
  "rootDir": "../",
  "globals": {
    "ts-jest": {
      "tsConfigFile": "tsconfig.test.json"
    }
  },
  "moduleFileExtensions": [
    "js",
    "json",
    "ts",
    "tsx"
  ],
  "moduleNameMapper": {
    "\\.(css|less)$": "<rootDir>/node_modules/jest-css-modules"
  },
  "moduleDirectories": [
    "node_modules",
    "."
  ],
  "testPathIgnorePatterns": [
    "/node_modules/",
    "/test/index/"
  ],
  "testRegex": "(/test/.*\\-spec)\\.(j|t)sx?$",
  "transform": {
    ".js": "<rootDir>/node_modules/webpack-babel-jest",
    ".tsx?": "<rootDir>/node_modules/ts-jest/preprocessor.js"
  },
  "setupTestFrameworkScriptFile": "./test/index.js",
  "verbose": true
}
